@model RoomManagerApp.Models.Room

@{
    ViewData["Title"] = "Create Room";
}


<div class="card-body p-4">
    <h3 class="card-title text-center fw-bold mb-3">Create Room</h3>

    <form asp-action="Create" method="post" novalidate>
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="alert alert-danger small"></div>

        <div class="mb-3">
            <label asp-for="OrganizationId" class="form-label fw-semibold"></label>
            <input asp-for="OrganizationId" class="form-control" placeholder="Organization ID" />
            <span asp-validation-for="OrganizationId" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Name" class="form-label fw-semibold"></label>
            <input asp-for="Name" class="form-control" placeholder="Room Name" />
            <span asp-validation-for="Name" class="text-danger small"></span>
        </div>
        <div class="mb-4">
            <label asp-for="Description" class="form-label fw-semibold"></label>
            <textarea asp-for="Description" class="form-control" placeholder="Optional description" rows="3"></textarea>
            <span asp-validation-for="Description" class="text-danger small"></span>
        </div>

        <div class="d-grid gap-2">
            <button type="submit" class="btn btn-success fw-bold">Create Room</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
        </div>

    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
